<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".fragment.DetailsHomeProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="#7e7f7f"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp">


            <TextView

                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/mona"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/card_slider"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="@dimen/_6sdp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        ></android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/T_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:textSize="@dimen/_9sdp"
        android:text="dhdhdhdjdjdjjdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:maxLines="1"
        android:layout_below="@id/card_slider"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/T_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b3b3b3"
        android:textSize="@dimen/_9sdp"
        android:layout_below="@+id/T_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:maxLines="1"
        android:text="EDFF"
        />

    <TextView
        android:id="@+id/T_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:textSize="@dimen/_9sdp"
        android:layout_below="@+id/T_brand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:maxLines="1"
        android:text="EDFF"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/T_price"
        android:background="#f9f9f7"
        android:layout_marginTop="@dimen/_4sdp"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:textSize="@dimen/_8sdp"
        android:text="@string/ProductDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:maxLines="1"
        android:layout_below="@id/view_title"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/T_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b3b3b3"
        android:textSize="@dimen/_9sdp"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="EDFF"
        />
    <View
        android:id="@+id/view_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/T_desc"
        android:background="#f2f2f2"
        android:layout_marginTop="@dimen/_4sdp"
        />
    <TextView
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:textSize="@dimen/_8sdp"
        android:text="@string/Colors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/view_desc"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colors"
        android:layout_marginStart="@dimen/_82sdp"
        android:layout_marginEnd="@dimen/_82sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/rel_colors">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img1"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:civ_border_width="@dimen/_2sdp"
            android:background="@drawable/circle_img"
            app:civ_border_color="#000"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img2"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/circle_img"
            app:civ_border_color="#000"
            android:layout_toEndOf="@+id/circle_img1"
            android:layout_marginStart="@dimen/_5sdp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img3"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:civ_border_width="@dimen/_2sdp"
            android:background="@drawable/circle_img"
            app:civ_border_color="#000"
            android:layout_toEndOf="@id/circle_img2"
            android:layout_marginStart="@dimen/_5sdp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img4"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:civ_border_width="@dimen/_2sdp"
            android:background="@drawable/circle_img"
            app:civ_border_color="#000"
            android:layout_toEndOf="@id/circle_img3"
            android:layout_marginStart="@dimen/_5sdp"
            />
    </RelativeLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/rel_colors"
        android:background="#f2f2f2"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/view_colors"
        />
    <TextView
        android:id="@+id/Sizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:textSize="@dimen/_8sdp"
        android:text="@string/Sizes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/view_colors"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Sizes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/relative_sizes"
        >
        <RelativeLayout

            android:id="@+id/rel_S"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xl"
                android:textColor="#575757"
                android:textSize="@dimen/_10sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/rel_M"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_img"

            android:layout_toEndOf="@+id/rel_S"
            android:layout_marginStart="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xl"
                android:textColor="#575757"
                android:textSize="@dimen/_10sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_L"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_img"
            android:layout_toEndOf="@id/rel_M"
            android:layout_marginStart="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xl"
                android:textColor="#575757"
                android:textSize="@dimen/_10sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img_XL"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/circle_img"
            android:layout_toEndOf="@id/rel_L"
            android:layout_marginStart="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xl"
                android:textColor="#575757"
                android:textSize="@dimen/_10sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:background="@drawable/login_btn"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_below="@id/relative_sizes"
        android:text="@string/add_to_cart"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        />
    <Button
        android:id="@+id/btn_add_to_wishlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39sdp"
        android:background="@drawable/wish_list_btn"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:textColor="#7e7f7f"
        android:layout_below="@id/btn_add_to_cart"
        android:text="@string/add_to_wishlist"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        />
</RelativeLayout>