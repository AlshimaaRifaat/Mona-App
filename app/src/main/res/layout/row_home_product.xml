<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_145sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_142sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardBackgroundColor="@android:color/white">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_142sdp"
                    android:layout_height="@dimen/_104sdp"
                    android:scaleType="fitXY"
                    />
                <RelativeLayout
                    android:layout_width="@dimen/_142sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="#fff"
                    android:layout_below="@id/img">
                    <TextView
                        android:id="@+id/T_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#848484"
                        android:textSize="@dimen/_9sdp"
                        android:text="dhdhdhdjdjdjjdd"
                       android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="1"
                        />

                    <TextView
                        android:id="@+id/T_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#848484"
                        android:textSize="@dimen/_9sdp"
                        android:layout_below="@+id/T_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="1"
                        android:text="EDFF"
                        />

                    <TextView
                        android:id="@+id/T_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#848484"
                        android:textSize="@dimen/_9sdp"
                        android:layout_below="@+id/T_brand"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="1"
                        android:text="EDFF"
                        />
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>